<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"

    >

    <include layout="@layout/toolbar" />

    />

    <LinearLayout
        android:id="@+id/loginLy"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/mine_bg_login"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/mine_image" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/mine_login"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_16" />


    </LinearLayout>

    <com.tepia.reservoir.view.MySettingView
        android:id="@+id/cardMv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <View style="@style/LineH" />

    <com.tepia.reservoir.view.MySettingView
        android:id="@+id/orderMv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View style="@style/LineH" />

    <com.tepia.reservoir.view.MySettingView
        android:id="@+id/etcMv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View style="@style/LineH" />

    <com.tepia.reservoir.view.MySettingView
        android:id="@+id/pointMv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View style="@style/LineH" />

    <com.tepia.reservoir.view.MySettingView
        android:id="@+id/messageMv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View style="@style/LineH" />

    <com.tepia.reservoir.view.MySettingView
        android:id="@+id/questionMv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View style="@style/LineH" />

    <com.tepia.reservoir.view.MySettingView
        android:id="@+id/aboutMv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View style="@style/LineH" />

    <Button
        android:id="@+id/logout"
        style="@style/commen_btn"
        android:layout_margin="@dimen/margin_30"
        android:text="退出登录" />
</LinearLayout>
